<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.handyman.activities.home.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.handyman.activities.home.fragments.ProfileFragment"
        android:label="activity_service_profile_account"
        tools:layout="@layout/activity_service_profile_account">
        <action
            android:id="@+id/action_profileFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.handyman.activities.home.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/activitiesFragment"
        android:name="com.example.handyman.activities.home.fragments.ActivitiesFragment"
        android:label="fragment_activities"
        tools:layout="@layout/fragment_activities">
        <action
            android:id="@+id/action_activitiesFragment_to_nearMeFragment"
            app:destination="@id/nearMeFragment" />
    </fragment>
    <fragment
        android:id="@+id/nearMeFragment"
        android:name="com.example.handyman.activities.home.fragments.NearMeFragment"
        android:label="fragment_near_me"
        tools:layout="@layout/fragment_near_me">
        <action
            android:id="@+id/action_nearMeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>